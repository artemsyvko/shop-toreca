{% extends '@admin/default_frame.twig' %}
{% set menus = ['setting', 'system', 'deliverydate_config'] %}
{% block title %}{{ 'deliverydate.admin.nav.setting.deliverydate.config'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.setting'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
<script>
var setModeAndSubmit = function(mode, keyname, keyid) {
    document.form1.mode.value = mode;
    if(keyname !== undefined && keyname !== "" && keyid !== undefined && keyid !== "") {
        document.form1[keyname].value = keyid;
    }
    document.form1.submit();
};
</script>
{% endblock javascript %}

{% block main %}
    <form role="form" class="form-row" name="form1" id="form1" method="post" action="?">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8"><span class="card-title">{{ 'deliverydate.admin.setting.deliverydate.config.title'|trans }}</span>
                                </div>
                                <div class="col-4 text-end">
                                    <a data-bs-toggle="collapse" href="#ordererInfo"
                                       aria-expanded="false" aria-controls="ordererInfo">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="ordererInfo">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.accept_time.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.accept_time) }}
                                        {{ form_errors(form.accept_time) }}
                                        {{ form_widget(form.same_day_flg) }}
                                        {{ form_errors(form.same_day_flg) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.default_deliverydate_days.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.default_deliverydate_days) }}
                                        {{ form_errors(form.default_deliverydate_days) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.method.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.method) }}
                                        {{ form_errors(form.method) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.calendar_month.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.calendar_month) }}
                                        {{ form_errors(form.calendar_month) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">

                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'admin.common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

