{% extends 'frame.twig' %}

{% set current = 2 %}

{% block main %}
    <div id="main" class="step2">
        <div class="main_inner">
            <div class="main_content">
                <div class="page-header">
                    <h1>{{ '権限チェック'|trans }}</h1>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <textarea class="form-control disp_area" name="disp_area">
{% if noWritePermissions|length == 0 %}
&gt;&gt;○：{{ 'アクセス権限は正常です'|trans }}
{% else %}
{{ '以下のファイルまたはディレクトリに書き込み権限を付与してください。'|trans }}
{% for noWritePermission in noWritePermissions %}
&gt;&gt;☓：{{ noWritePermission }}
{% endfor %}
{% endif %}
                            </textarea>
                            <ul class="btn_area">
                                <li class="d-grid gap-2">
                                    {% if noWritePermissions|length > 0 %}
                                        <a href="{{ path('install_step2') }}" class="btn btn-primary btn-block btn-lg">{{ '更新する'|trans }}</a>
                                    {% else %}
                                        <a href="{{ path('install_step3') }}" class="btn btn-primary btn-block btn-lg">{{ '次へ進む'|trans }}</a>
                                    {% endif %}
                                </li>
                                <li class="d-grid gap-2"><a href="{{ path('install_step1') }}" class="btn btn-link btn-block btn-lg">{{ '前へ戻る'|trans }}</a></li>
                            </ul>
                        </div><!-- /.col -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
